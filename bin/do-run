#!/bin/bash

export PATH=/home/erwin/go/bin:/home/erwin/.cargo/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/local/games:/usr/games


function log {
  echo "$(hostname): $(date +%T)> $*"
}

function finish {

  log "Starting systemd coldplay"
  sudo systemctl start coldplay
}
trap finish EXIT

cd /home/erwin/code/coldplay

log "Building binary"
go build -o coldplay .

log "Stopping systemd coldplaying"
sudo systemctl stop coldplay

log "Running binary"
/home/erwin/code/coldplay/coldplay
